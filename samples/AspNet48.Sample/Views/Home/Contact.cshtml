@{
    ViewBag.Title = "Contact";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h2 class="card-title mb-0">
                        <i class="fas fa-envelope me-2"></i>
                        Contact & Support
                    </h2>
                </div>
                <div class="card-body">
                    <p class="lead">@ViewBag.Message</p>
                    
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <i class="fas fa-question-circle text-primary me-2"></i>
                                        API Support
                                    </h4>
                                    <p class="card-text">Need help with the Prophy API? Our support team is here to assist you.</p>
                                    <ul class="list-unstyled">
                                        <li><i class="fas fa-envelope text-muted me-2"></i>support@prophy.ai</li>
                                        <li><i class="fas fa-globe text-muted me-2"></i>www.prophy.ai/support</li>
                                        <li><i class="fas fa-book text-muted me-2"></i>API Documentation</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <i class="fas fa-code text-warning me-2"></i>
                                        Developer Resources
                                    </h4>
                                    <p class="card-text">Access comprehensive documentation and developer tools.</p>
                                    <ul class="list-unstyled">
                                        <li><i class="fab fa-github text-muted me-2"></i>GitHub Repository</li>
                                        <li><i class="fas fa-file-code text-muted me-2"></i>Code Examples</li>
                                        <li><i class="fas fa-tools text-muted me-2"></i>SDK Downloads</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <i class="fas fa-users text-info me-2"></i>
                                        Community
                                    </h4>
                                    <p class="card-text">Connect with other developers using the Prophy API.</p>
                                    <ul class="list-unstyled">
                                        <li><i class="fab fa-discord text-muted me-2"></i>Discord Community</li>
                                        <li><i class="fab fa-stack-overflow text-muted me-2"></i>Stack Overflow</li>
                                        <li><i class="fas fa-comments text-muted me-2"></i>Developer Forum</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <i class="fas fa-bug text-danger me-2"></i>
                                        Report Issues
                                    </h4>
                                    <p class="card-text">Found a bug or have a feature request? Let us know!</p>
                                    <ul class="list-unstyled">
                                        <li><i class="fas fa-bug text-muted me-2"></i>Bug Reports</li>
                                        <li><i class="fas fa-lightbulb text-muted me-2"></i>Feature Requests</li>
                                        <li><i class="fas fa-shield-alt text-muted me-2"></i>Security Issues</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-primary mt-4">
                        <h5><i class="fas fa-info-circle me-2"></i>Getting Started</h5>
                        <p class="mb-2">New to the Prophy API? Here are some helpful resources:</p>
                        <ul class="mb-0">
                            <li><strong>Quick Start Guide:</strong> Get up and running in minutes</li>
                            <li><strong>API Reference:</strong> Complete documentation of all endpoints</li>
                            <li><strong>Sample Code:</strong> Working examples in multiple languages</li>
                            <li><strong>Best Practices:</strong> Tips for optimal API usage</li>
                        </ul>
                    </div>

                    <div class="alert alert-warning mt-3">
                        <h5><i class="fas fa-exclamation-triangle me-2"></i>Important Notes</h5>
                        <ul class="mb-0">
                            <li>Keep your API keys secure and never expose them in client-side code</li>
                            <li>Review rate limits and implement appropriate retry logic</li>
                            <li>Use HTTPS for all API communications</li>
                            <li>Monitor your API usage through the developer dashboard</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 